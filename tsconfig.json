{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "paths": {
            "@/*": ["./*"],
            "@/api": ["./api-client/index.ts"],
            "@/api/*": ["./api-client/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "components/swr/StudienDetail.jsx"],
    "exclude": ["node_modules"]
}
